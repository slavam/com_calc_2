%div{ class:"row"}
  %aside{ class:"col-md-4"}
    %section{ class:"user_info"}
      %h1 Пользователь #{@user.last_name}
-#      
  %div{ class:"row"}
    %div{ class: "col-md-6 col-md-offset-3"}
      %h1= "Пользователь"
      %table{class: "table table-bordered"}
        %tr
          %th Логин
          %td= @user.login
        %tr
          %th Фамилия
          %td= @user.last_name
        %tr
          %th Имя
          %td= @user.first_name
        %tr
          %th Отчество
          %td= @user.middle_name
        %tr
          %th e-mail
          %td= @user.email
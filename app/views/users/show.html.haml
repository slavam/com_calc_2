%div{ class:"row"}
  %aside{ class:"col-md-4"}
    %section{ class:"user_info"}
      %h1 Пользователь #{@user.last_name}
  %div{ class:"col-md-8"}
    %h3 Жилье пользователя
    - if @user.flats.any? 
      -# %h3 Всего квартир #{@user.flats.count}
      %ol{ class:"flats"}
        = render @flats
    = link_to 'Новое жилье', new_flat_path
-#      
  %div{ class:"row"}
    %div{ class: "col-md-6 col-md-offset-3"}
      %h1= "Пользователь"
      %table{class: "table table-bordered"}
        %tr
          %th Логин
          %td= @user.login
        %tr
          %th Фамилия
          %td= @user.last_name
        %tr
          %th Имя
          %td= @user.first_name
        %tr
          %th Отчество
          %td= @user.middle_name
        %tr
          %th e-mail
          %td= @user.email